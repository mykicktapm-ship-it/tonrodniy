# REST API root served by the backend (include protocol, no trailing slash)
VITE_API_BASE_URL=http://localhost:4000

# WebSocket endpoint for real-time lobby updates
VITE_WS_URL=ws://localhost:4000/ws

# Public TonConnect manifest URL reachable by wallets
VITE_TONCONNECT_MANIFEST_URL=/tonconnect-manifest.json

# Deployed TONRODY contract address (EQ...)
VITE_TON_CONTRACT_ADDRESS=EQ_TonrodyContractAddress

# Telegram bot username used for deep links and notifications
VITE_TG_BOT_NAME=@yourbot

# Display title for the Telegram Mini App shell
VITE_TG_APP_TITLE=TONRODY

# App-specific salt for deterministic client utilities
VITE_APP_SALT=change-me
